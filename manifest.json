{
  "manifest_version": 2,
  "name": "Test",
  "short_name": "Test",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*"],
      "js": ["content-script.js"]
    }
  ],
  
  "permissions": [
    "desktopCapture",
    "http://localhost:8080/*",
    "tabs"
  ]
}
